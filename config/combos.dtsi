/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

// use require-prior-idle-ms for combos
#undef COMBO_HOOK
#define COMBO_HOOK require-prior-idle-ms = <150>;

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

// make homerow combos tap-only (so HRMs can be chorded instantaneously)

#define HRC_LPAR   &hmr LS(LCTRL) LPAR
#define HRC_RPAR   &hmr LA(LCTRL) RPAR
#define HRC_EQUAL  &hmr LA(LGUI) EQUAL
#define HRC_DOLLAR &hmr LS(LCTRL) PRCNT
#define HRC_HASH &hmr LA(LCTRL) HASH
#define HRC_AT  &hmr LA(LGUI) AT_SIGN

/* Horizontal combos - left hand */
ZMK_COMBO(pipe,   &kp PIPE,       LT3 LT2, 0, COMBO_TERM_FAST)
ZMK_COMBO(grave,   &kp GRAVE,       LT2 LT1, 0, COMBO_TERM_FAST)
ZMK_COMBO(tilde,   &kp TILDE,       LT1 LT0, 0, COMBO_TERM_FAST)
ZMK_COMBO(excl,   &kp EXCL,       LM4 LM3, 0, COMBO_TERM_FAST)
ZMK_COMBO(at,   HRC_AT,       LM3 LM2, 0, COMBO_TERM_FAST)
ZMK_COMBO(hash,   HRC_HASH,       LM2 LM1, 0, COMBO_TERM_FAST)
ZMK_COMBO(dollar,   HRC_DOLLAR,       LM1 LM0, 0, COMBO_TERM_FAST)
ZMK_COMBO(percent,   &kp PRCNT,       LB0 LM0, 0, COMBO_TERM_FAST)
ZMK_COMBO(caret,   &kp CARET,       LB1 LB0, 0, COMBO_TERM_FAST)
ZMK_COMBO(ampersand,   &kp AMPERSAND,       LB2 LB1, 0, COMBO_TERM_FAST)
ZMK_COMBO(astersk,   &kp ASTRK,       LB2 LB3, 0, COMBO_TERM_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(plus,   &kp PLUS,       RT0 RT1, 0, COMBO_TERM_FAST)
ZMK_COMBO(lbrace,   &kp LEFT_BRACE,       RT1 RT2, 0, COMBO_TERM_FAST)
ZMK_COMBO(rbrace,   &kp RIGHT_BRACE,       RT2 RT3, 0, COMBO_TERM_FAST)
ZMK_COMBO(bslash,   &kp BSLH,       RT3 RT4, 0, COMBO_TERM_FAST)
ZMK_COMBO(lt,   &kp LT,       RB0 RM0, 0, COMBO_TERM_FAST)
ZMK_COMBO(colon,   &kp COLON,       RT0 RM0, 0, COMBO_TERM_FAST)
ZMK_COMBO(gt,   &kp GT,       RM1 RM0, 0, COMBO_TERM_FAST)
ZMK_COMBO(lpar,   HRC_LPAR,       RM1 RM2, 0, COMBO_TERM_FAST)
ZMK_COMBO(rpar,   HRC_RPAR,       RM2 RM3, 0, COMBO_TERM_FAST)
ZMK_COMBO(equal,   HRC_EQUAL,       RM2 RM3, 0, COMBO_TERM_FAST)
ZMK_COMBO(under,   &kp UNDER,       RB0 RB1, 0, COMBO_TERM_FAST)
ZMK_COMBO(lbracket,   &kp LEFT_BRACKET,       RB1 RB2, 0, COMBO_TERM_FAST)
ZMK_COMBO(rbracket,   &kp RIGHT_BRACKET,       RB2 RB3, 0, COMBO_TERM_FAST)
ZMK_COMBO(minus,   &kp MINUS,       RB3 RB4, 0, COMBO_TERM_FAST)
